<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/txtInput">


    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlus"
            app:layout_constraintStart_toStartOf="@+id/inputb"
            app:layout_constraintEnd_toEndOf="@+id/inputb" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputb" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMinus"
            app:layout_constraintStart_toStartOf="@+id/btnDivide"
            app:layout_constraintEnd_toEndOf="@+id/btnDivide" app:layout_constraintTop_toBottomOf="@+id/btnDivide"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMultiply"
            app:layout_constraintStart_toStartOf="@+id/btnMinus"
            app:layout_constraintEnd_toEndOf="@+id/btnMinus" app:layout_constraintTop_toBottomOf="@+id/btnMinus"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDivide"
            app:layout_constraintStart_toStartOf="@+id/btnPlus"
            app:layout_constraintEnd_toEndOf="@+id/btnPlus" app:layout_constraintTop_toBottomOf="@+id/btnPlus"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/inputa"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="input A"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/inputb"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/inputb"
            android:hint="input B"
            app:layout_constraintStart_toStartOf="@+id/inputa" app:layout_constraintEnd_toEndOf="@+id/inputa"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/inputa"/>
</android.support.constraint.ConstraintLayout>